<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.HomeActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/layout_generalized"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal"
            android:layout_below="@+id/layout_personalized"
            android:layout_marginTop="15dp">

            <Button
                android:id="@+id/generalizedUse"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:background="#e55353"
                android:onClick="onGeneralizedUse"
                android:text="Generalized Use"
                android:textColor="#fff"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_personalized"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <Button
                android:id="@+id/personalized_use"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:background="#e55353"
                android:onClick="onPersonalizedUse"
                android:text="Personalized Use"
                android:textColor="#fff"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#e55353"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="280dp"
                android:layout_height="200dp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/logo_3_new"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_generalized"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true">

            <Button
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:background="@drawable/settings_new_last_last"
                android:layout_gravity="center_vertical"
                android:id="@+id/settings"
                android:onClick="onSettings"/>

        </LinearLayout>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>