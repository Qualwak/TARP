<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lab.igor.labtesttask1.activity.StartActivity">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#e55353"
        android:gravity="center">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="280dp"
            android:scaleType="centerInside"
            android:layout_height="200dp"
            android:src="@drawable/logo_3_new"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

        <Button
            android:id="@+id/drug_interaction_lookup"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:background="@drawable/button"
            android:text="@string/drug_interaction"
            android:textColor="#ffffff" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/linear_layout_1">

        <Button
            android:id="@+id/food_interaction_lookup"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/button"
            android:text="@string/food_interaction"
            android:textColor="#ffffff"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear_layout_2"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true">

        <Button
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:background="@drawable/settings_new_last_last"
            android:layout_gravity="center_vertical"
            android:id="@+id/settings"/>

    </LinearLayout>

</RelativeLayout>
</android.support.constraint.ConstraintLayout>
