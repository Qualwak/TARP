<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e55353"
    tools:context="com.lab.igor.labtesttask1.activity.WarningActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:id="@+id/linear1">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="295dp"
        android:layout_height="295dp"
        app:srcCompat="@drawable/not_found_1"
        tools:layout_editor_absoluteY="33dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/linear1"

        android:id="@+id/linear2"
        >
    <TextView
        android:id="@+id/sign"
        android:layout_width="293dp"
        android:layout_height="84dp"
        android:text="No known food interactions"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="30sp"
         />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/linear4"
        android:layout_below="@id/linear2"
        android:layout_marginBottom="27dp"

        android:id="@+id/linear3"
        >
    <Button
        android:id="@+id/try_again"
        android:layout_width="169dp"
        android:layout_height="59dp"
        android:background="#ffffff"
        android:text="Try again"
        android:onClick="tryAgainButton"
        android:textColor="#e55353"
        android:layout_gravity="bottom"
        android:textSize="18sp"
         />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="65dp"
        >

        <Button
            android:id="@+id/go_to_main"
            android:layout_width="169dp"
            android:layout_height="59dp"
            android:background="@drawable/go_to_main_design"
            android:text="Go to main"
            android:onClick="goToMainButton"
            android:textColor="#ffffff"
            android:textSize="18sp" />
    </LinearLayout>



</RelativeLayout>
