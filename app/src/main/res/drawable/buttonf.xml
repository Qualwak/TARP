<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true" android:state_pressed="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <corners android:radius="20dp"/>
            <gradient android:angle="90" android:startColor="#ff00b8" android:centerColor="#a1ff00b8" android:endColor="#3bff00b8"/>
            <padding android:bottom="10dp" android:left="5dp" android:right="5dp" android:top="10dp"/>

        </shape>

    </item>
    <item android:state_focused="true" android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <corners android:radius="20dp"/>
            <gradient android:angle="90" android:startColor="#ff00b8" android:centerColor="#a1ff00b8" android:endColor="#3bff00b8"/>
            <padding android:bottom="10dp" android:left="5dp" android:right="5dp" android:top="10dp"/>

        </shape>
    </item>
    <item android:state_focused="false" android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <corners android:radius="20dp"/>
            <gradient android:angle="90" android:startColor="#ff00b8" android:centerColor="#a1ff00b8" android:endColor="#3bff00b8"/>
            <padding android:bottom="10dp" android:left="5dp" android:right="5dp" android:top="10dp"/>

        </shape>
    </item>
    <item>

        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <corners android:radius="26dp"/>
            <solid android:color="#ff00b8"/>
            <padding android:bottom="10dp" android:left="5dp" android:right="5dp" android:top="10dp"/>

        </shape>
    </item>

</selector>